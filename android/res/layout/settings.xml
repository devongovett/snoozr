<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/settings"
        android:key="settingsLabel">
        <ListPreference 
            android:key="allowedSnoozes"
            android:defaultValue="3"
            android:title="@string/allowedSnoozes"
            android:entries="@array/numSnoozes"
            android:entryValues="@array/numSnoozes" />
        <ListPreference
            android:key="sleepCycle"
            android:defaultValue="90"
            android:title="@string/sleepCycle"
            android:entries="@array/sleepCycle"
            android:entryValues="@array/sleepCycle" />
        <ListPreference
            android:key="sound"
            android:defaultValue="@string/church_bells"
            android:title="@string/sound"
            android:entries="@array/alarmSounds"
            android:entryValues="@array/alarmSounds" />
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/about"
        android:key="aboutLabel">
        <Preference
            android:key="about"
            android:title="@string/about"/>
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/dangerZone"
        android:key="dangerLabel">  
        <Preference
            android:key="resetSchedule"
            android:title="@string/resetSchedule" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/copyright"
        android:key="copyRight"/>
</PreferenceScreen>